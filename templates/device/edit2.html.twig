{% extends 'base.html.twig' %}

{% block title %}Edit Device{% endblock %}

{% block body %}
<div class="container pt-3 bg-white">
    <h1>Edit Device</h1>
    {{ form_start(form) }}
    <div class="row">
        {{ form_row(form.technician) }}
        {{ form_row(form.diagnosis) }}
        {{ form_row(form.solution) }}
        {{ form_row(form.quoteNumber) }}
        {{ form_row(form.quoteDate) }}
        {{ form_row(form.quoteAmount) }}
        <div class="mb-3 col-md-2">
            {{ form_label(form.repairDelay) }}
            <div class="input-group">
                {{ form_widget(form.repairDelay) }}
                <span class="input-group-text"> Jours</span>
            </div>
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Save'|trans) }}</button>
    {{ form_end(form) }}
    
    {{ include('device/_delete_form.html.twig') }}
</div>
{% endblock %}

{% block javascripts %}
{{  parent() }}
<script>
        window.addEventListener('load', function() {
            //TODO => Update with TS-SELECT2 to avoid JQUERY
            $("#device_client").select2();
        });
</script>
{% endblock %}
