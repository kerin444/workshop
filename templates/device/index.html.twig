{% extends 'base.html.twig' %}

{% block title %}Device index{% endblock %}

{% block body %}
    <h1>Device index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Brand</th>
                <th>SerialNumber</th>
                <th>DateBuy</th>
                <th>Problem</th>
                <th>Diagnosis</th>
                <th>Solution</th>
                <th>QuoteNumber</th>
                <th>QuoteDate</th>
                <th>QuoteAmount</th>
                <th>RepairDelay</th>
                <th>RepairDate</th>
                <th>ReturnDate</th>
                <th>ClientFeedback</th>
                <th>ClientFeedbackDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for device in devices %}
            <tr>
                <td>{{ device.id }}</td>
                <td>{{ device.description }}</td>
                <td>{{ device.brand }}</td>
                <td>{{ device.serialNumber }}</td>
                <td>{{ device.dateBuy ? device.dateBuy|date('Y-m-d') : '' }}</td>
                <td>{{ device.problem }}</td>
                <td>{{ device.diagnosis }}</td>
                <td>{{ device.solution }}</td>
                <td>{{ device.quoteNumber }}</td>
                <td>{{ device.quoteDate ? device.quoteDate|date('Y-m-d') : '' }}</td>
                <td>{{ device.quoteAmount }}</td>
                <td>{{ device.repairDelay }}</td>
                <td>{{ device.repairDate ? device.repairDate|date('Y-m-d') : '' }}</td>
                <td>{{ device.returnDate ? device.returnDate|date('Y-m-d') : '' }}</td>
                <td>{{ device.clientFeedback }}</td>
                <td>{{ device.clientFeedbackDate ? device.clientFeedbackDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('device_show', {'id': device.id}) }}">show</a>
                    <a href="{{ path('device_edit1', {'id': device.id}) }}">edit1</a>
                    <a href="{{ path('device_edit2', {'id': device.id}) }}">edit2</a>
                    <a href="{{ path('device_edit3', {'id': device.id}) }}">edit3</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('device_new') }}">Create new</a>
{% endblock %}
