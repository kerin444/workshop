{% extends 'base.html.twig' %}

{% block title %}Edit Device{% endblock %}

{% block body %}
<div class="container pt-3 bg-white">
    <h1>Edit Device</h1>
    {{ form_start(form) }}
    <div class="row  align-items-end">
        {{ form_row(form.client) }}
        <div class="mb-3 col-1">
            <a href="{{ path('client_edit', {'id': device.client.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-edit"></i></a>
        </div>
    </div>
    <div class="row">
        {{ form_row(form.description) }}
        {{ form_row(form.brand) }}
        {{ form_row(form.serialNumber) }}
        {{ form_row(form.dateBuy) }}
        {{ form_row(form.problem) }}
    </div>
    <button class="btn btn-primary">{{ button_label|default('Save'|trans) }}</button>
    {{ form_end(form) }}
    
    {{ include('device/_delete_form.html.twig') }}
</div>
{% endblock %}

{% block javascripts %}
{{  parent() }}
<script>
        window.addEventListener('load', function() {
            //TODO => Update with TS-SELECT2 to avoid JQUERY
            $("#device_client").select2();
        });
</script>
{% endblock %}
